# ========================================
# Google Earth Engine Configuration
# ========================================
GEE_SERVICE_ACCOUNT=your-service-account@your-project.iam.gserviceaccount.com
GEE_KEY_FILE=./service-account-key.json
GEE_PROJECT_ID=your-gcp-project-id

# ========================================
# Google Drive Configuration
# ========================================
DRIVE_CREDENTIALS=./google-drive-credentials.json
DRIVE_FOLDER_ID=your-google-drive-folder-id
DRIVE_MODEL_FOLDER=disaster_detection/models
DRIVE_DATA_FOLDER=disaster_detection/data

# ========================================
# Colab Integration
# ========================================
# Google Drive file IDs for Colab notebooks
COLAB_NOTEBOOK_FLOOD=1abc123xyz_flood_training_notebook_id
COLAB_NOTEBOOK_FIRE=1def456xyz_fire_training_notebook_id
COLAB_WEBHOOK_URL=https://your-colab-webhook.com/trigger

# ========================================
# Area of Interest (AOI)
# ========================================
# Default: India region
# Format: [min_lon, min_lat, max_lon, max_lat]
AOI_MIN_LON=68.0
AOI_MIN_LAT=8.0
AOI_MAX_LON=97.0
AOI_MAX_LAT=35.0

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_LOG_LEVEL=info

# ========================================
# Jenkins Configuration
# ========================================
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your-jenkins-api-token

# ========================================
# Drift Detection
# ========================================
DRIFT_THRESHOLD=0.5
DRIFT_CHECK_INTERVAL_HOURS=24
DRIFT_MIN_SAMPLES=30

# ========================================
# Model Training
# ========================================
MODEL_INPUT_SIZE=256
MODEL_BATCH_SIZE=8
MODEL_EPOCHS=50
MODEL_LEARNING_RATE=0.001

# ========================================
# Notification (Optional)
# ========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_ALERTS_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@yourdomain.com
EMAIL_TO=admin@yourdomain.com

# ========================================
# Docker Registry (Optional)
# ========================================
DOCKER_REGISTRY=your-dockerhub-username
DOCKER_IMAGE_PREFIX=disaster-detection

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
LOG_DIR=./logs
